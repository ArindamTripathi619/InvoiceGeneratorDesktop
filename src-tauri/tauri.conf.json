{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Apex Solar Invoice Generator",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": false,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": false,
        "copyFile": false,
        "createDir": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "exists": true,
        "scope": [
          "$APPDATA/**",
          "$DOWNLOAD/**",
          "$DESKTOP/**",
          "$RESOURCE/**"
        ]
      },
      "path": {
        "all": false,
        "appDataDir": true,
        "configDir": true,
        "downloadDir": true,
        "desktopDir": true,
        "join": true,
        "sep": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://accounts.google.com/*",
          "https://oauth2.googleapis.com/*",
          "https://www.googleapis.com/*",
          "https://api.github.com/repos/ArindamTripathi619/InvoiceGeneratorDesktop/*"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.apexsolar.invoicegenerator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright Â© 2025 Apex Solar. All rights reserved.",
      "category": "Business",
      "shortDescription": "Invoice Generation System",
      "longDescription": "Professional invoice generation and management system for Apex Solar. Create, track, and manage invoices with ease.",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "tsp": false,
        "wix": {
          "language": "en-US"
        },
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline';"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Apex Solar - Invoice Generator",
        "width": 1400,
        "height": 900,
        "minWidth": 480,
        "minHeight": 400,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "focus": true
      }
    ]
  }
}